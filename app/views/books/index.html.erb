<h1>書籍一覧</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本の持ち主</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= link_to '修正', [:edit, book] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規登録", [:new, :book] %>
